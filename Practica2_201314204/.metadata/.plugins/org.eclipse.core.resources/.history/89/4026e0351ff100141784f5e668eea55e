    Dimension tamano = Toolkit.getDefaultToolkit().getScreenSize();

    public NumDiscos() {
        System.out.println("La pantalla es de " + tamano.getWidth()+ " x " + tamano.getHeight());
        double a = tamano.getWidth();
        double b = tamano.getHeight();
        System.out.println("a= " + a + " b= " + b);
               
        initComponents();
        
        this.setSize((int)tamano.getWidth()/2,(int)tamano.getHeight()/2);
        this.setLocation((int)tamano.getWidth()/2 - this.getWidth()/2 ,(int)tamano.getHeight()/2 - this.getHeight()/2);
        this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        
        jLabel3.setText("Mi pantalla mide: Horizontal= " + a + "  puntos, vertical= " + b+"  puntos");
        jLabel4.setText("Pero la he configurado para este tamaño: Horizontal= " + a/2 +
                "  puntos, vertical= " + b/2+"  puntos");
    }

