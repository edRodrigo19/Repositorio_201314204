package hanoi;
import java.util.Date;
import java.awt.event.*;
import java.awt.*;//barras
import javax.swing.JFrame;
import javax.swing.Timer;
import java.text.DateFormat;

public class Crono extends javax.swing.JFrame {


    int minutos = 0, segundos = 0, horas = 0;
    Timer cronometro;

    public Crono() {
        super("Aplicación Torres de Hanoi");
        Dimension tamano = Toolkit.getDefaultToolkit().getScreenSize();

        initComponents();
        this.setMinimumSize(new Dimension(500, 220)); 
        setDefaultCloseOperation(0);// anula cerrar (esquina superior derecha --> icono en aspa X)
        //this.setSize((int) tamano.getWidth() / 2, (int) tamano.getHeight() / 2);// define el tamaño
        this.setLocation((int) tamano.getWidth() / 2 - this.getWidth() / 2, 
                (int) tamano.getHeight() / 2 - this.getHeight() / 2);//centra
        setResizable(false);// false no permite arrastrar frame desde el margen, true lo permite
       
        jLabel2.setVisible(true);// no vemos el reloj
        new reloj(); //llama a la clase reloj
        new cronometro(); //llama a la clase cronometro
    }
    //vemos varias clases con sus correspondientes matodos

    private class reloj implements ActionListener {
        //Timer da milisegundos (Timer 1000) pero la hora la da con clases importadas
        private Timer muestraLaHora = new Timer(1000, this);
        public reloj() {
            muestraLaHora.start();
        }

        public void actionPerformed(ActionEvent e) {
            jLabel2.setText(DateFormat.getTimeInstance(DateFormat.MEDIUM).format(new Date()));
            System.out.println(DateFormat.getTimeInstance(DateFormat.MEDIUM).format(new Date()));
        }
    }

    private class cronometro implements ActionListener {
        private Timer cronometro = new Timer(1000, this);
        public cronometro() {
            cronometro.start();
        }

        public void actionPerformed(ActionEvent e) {
            segundos++;
            if (segundos == 59) {
                Toolkit.getDefaultToolkit().beep();
                //cronometro.stop(); //si queremos que pare al minuto
                segundos = 0;
                minutos++;
            }
            if (minutos == 59) {
                minutos = 0;
                horas++;
            }
            jLabel4.setText(horas + ":" + minutos + ":" + segundos);
            System.out.println(horas + ":" + minutos + ":" + segundos);
        }
    }

