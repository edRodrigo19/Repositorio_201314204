package Problemas;
import java.util.Scanner;
public class Pro13 {
	
public static void main(String[]args){
	
	String letra1, letra2;
	int respuesta=0;
	Scanner sc=new Scanner(System.in);
	System.out.println("ingrese cualquier letra del abecedario");
	letra1=sc.next();
	
	System.out.println("Intente adivinar la letra");
	letra2=sc.next();
	int comparar=letra1.compareTo(letra2);
	
		while (respuesta==0 || comparar<0){
		if (comparar<0){
			System.out.println("Antes");
			letra1=sc.next();}
			respuesta=1;
			
			if (comparar>0){
	 		System.out.println("Despues");
			letra1=sc.next();
			respuesta=0;
			}
		} 				
		 		if (comparar==0){
		 			System.out.println("Haz acertado a la letra");
		 			respuesta=2;
		 			
		 		}
		}
	
	}
